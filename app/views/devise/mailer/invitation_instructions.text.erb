<%= t("devise.mailer.invitation_instructions.hi", name: @resource.first_name) %>

<%= t("devise.mailer.invitation_instructions.info") %>
<% t("devise.mailer.invitation_instructions.info_points", default: []).each do |point| %>
<%= point %>
<% end %>


<%= t("devise.mailer.invitation_instructions.confirm") %>

